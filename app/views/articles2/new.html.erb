<h1> Create an article2 </h1>

<% if @article.errors.any? %>

<% @article.errors.full_messages.each do |msg| %>
 <li> <%= msg %> </li>

 <% end %>
 <% end %>

<%= form_for @article2 do |f| %>

 <p>
 	<%= f.label :title %>
 	<%= f.text_field :title %>
 </p>

 <p>
    <%= f.label :description%>
    <%= f.text_area :description %>
 </p>

 <p>
     <%= f.submit %>
 </p>

<%end%>